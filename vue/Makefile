YARN = yarn

## 
## --------------------------------------------------------------------------------
##  ðŸ§© Yarn
## --------------------------------------------------------------------------------

yarn: ## Yarn commands or pass the parameter "c=" to run a given command, example: make yarn c="add vue"
	@$(eval c ?=)
	@$(VUE) $(YARN) $(c)

## 
## --------------------------------------------------------------------------------
##  ðŸ§¹ Eslint
## --------------------------------------------------------------------------------

vue-type-check: ## Run the TypeScript type checker
	@$(VUE) $(YARN) type-check
